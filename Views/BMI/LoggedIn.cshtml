

@{
    ViewBag.Title = "LoggedIn";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="#"><i class="fa fa-child" style="font-size:20px;color:white; padding-right:5px;" aria-hidden="true"></i>Unfit2<b>Fit</b></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="navbar-brand" href="@Url.Action("Home","BMI")" style="font-size:20px;color:white; margin-left:1450px;">
        <b>Logout</b><i class="fa fa-sign-out fa-4" style="font-size:20px;color:white; padding-left:5px;" aria-hidden="true"></i>
    </a>



</nav>

<div class="container-fluid">
    <div class="row no-gutter">
        <!-- The image half -->
        <div class="col-md-6 d-none d-md-flex bg-image" style="margin-top:10px; margin-left:-120px; ">
            <img src="https://previews.123rf.com/images/romastudio/romastudio1603/romastudio160300236/54088730-healthy-food-background-studio-photo-of-different-fruits-and-vegetables-on-old-wooden-table-high-res.jpg" />
        </div>


        <!-- The content half -->
        <div class="col-md-6 bg-transparent" style="margin-top:50px; color:white;">
            <div class="login d-flex align-items-center py-5" style="margin-top:50px;">

                <!-- Demo content-->
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-9 mx-auto">

                            <p class="text-muted mb-5">
                                @if (Session["UserId"] != null)
                                {
                                <p style="margin-left:-50px; margin-top:-100px; font-size:60px;">
                                    Hello @Session["UserName"].ToString() !!
                                </p>
                            }
                                </p>
                                <form>
                                    <h3 class="display-4">Be healthy and maintain your fitness</h3>


                                    <div class="text-center d-flex justify-content-between mt-4">
                                        <a href="@Url.Action("Profile","User")" class="btn btn-warning">Update Profile</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div><!-- End -->

                </div>
            </div><!-- End -->

        </div>
    </div>